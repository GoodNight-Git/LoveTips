.smCard-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 6rem;
  height: 6rem;
  background-color: #fbdbc9;
  border-radius: 1.5rem;
  border:2px solid #2c2c2c;
  margin:0 auto;
  margin-bottom:1rem;
}
.smCard-con image{
  width: 3rem;
  height: 3rem;
  margin:0.5rem auto;
}
.smCard-con text{
  line-height: 1rem;
}