.lgCard-con {
  width: 80%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 2px solid #2c2c2c;
  border-radius: 1.5rem;
  padding: 0.5rem;
  margin: auto;
}

.lgCard-con .dashed-con {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 2px dashed #2c2c2c;
  border-radius: 1.5rem;
}

.lgCard-con .dashed-con image {
  width: 8rem;
  height: 8rem;
  margin: 30% auto 5% auto;
}

.lgCard-con .dashed-con .num-text {
  line-height: 3rem;
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 15%;
}

.lgCard-con .dashed-con .choose-btn {
  width: 6rem;
  height: 3rem;
  background-color: #ee655f;
  border: 2px solid #2c2c2c;
  border-radius: 1.5rem;
}

.lgCard-con .dashed-con .choose-btn text {
  line-height: 3rem;
  font-size: 18px;
  font-weight: 600;
}
