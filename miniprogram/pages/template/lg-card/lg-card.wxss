.getCard-con{
  position: relative;
  transform: translate(-50%,-50%);
  -webkit-perspective: 1500;
  -moz-perspective: 1500;
}
.lgCard-con {
  position: absolute;
  top: 0;
  left: 0;
  /* width: 240px;
  height: 450px; */
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 2px solid #2c2c2c;
  border-radius: 1.5rem;
  padding: 0.5rem;
  margin:0 auto;
  /* top:-225px; */
  backface-visibility: hidden;
  transform: scale(0.8);
  transition: transform 0.5s;
}

.lgCard-con-active {
  /* transform: translateY(-50%); */
  /* transform-origin: center center; */
  transform: scale(1);
  transition: transform 0.5s;
}

.lgCard-back {
  transform: rotateY(-180deg);
}

.lgCard-con .dashed-con {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 2px dashed #2c2c2c;
  border-radius: 1.5rem;
}

.lgCard-con .dashed-con image {
  width: 8rem;
  height: 8rem;
  margin: 30% auto 5% auto;
}

.lgCard-con .dashed-con .num-text {
  line-height: 3rem;
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 15%;
}

.lgCard-con .dashed-con .choose-btn {
  width: 6rem;
  height: 3rem;
  background-color: #ee655f;
  border: 2px solid #2c2c2c;
  border-radius: 1.5rem;
}

.lgCard-con .dashed-con .choose-btn text {
  line-height: 3rem;
  font-size: 18px;
  font-weight: 600;
}
