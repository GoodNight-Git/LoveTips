#card-con .content-con{
  display: flex;
  flex-direction: row;
  align-items: left;
  border:2px solid #040404;
}
#card-con .content-con .image-con{
  align-items: center;
  padding:0.5rem 0.8rem;
}

#card-con .content-con .text-con{
  display: flex;
  flex-direction: column;
  align-items: left;
  width: 15rem;
  padding:0.5rem;
}
#card-con .content-con .text-con .time{
  font-size: 12px;
  font-weight: 600;
  line-height: 1rem;
  color:#bebebe;
}
#card-con .content-con .text-con .name{
  font-size: 16px;
  font-weight: 600;
  line-height: 1.8rem;
  color:#040404;
}
#card-con .content-con .text-con .price{
  font-size: 12px;
  font-weight: 600;
  line-height: 1rem;
  color:#ed556a;
}