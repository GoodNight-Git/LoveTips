/* pages/index.wxss */
@import "../template/card/card.wxss";

page {
  font-family: "Muyao-Softbrush";
  background-color: #faeeea;
  position: relative;
}

#index-con {
  width: 100%;
}

van-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.addCard-con {
  width: 22.2rem;
  height: 5rem;
  background-color: #eee;
  text-align: center;
  margin-top: 0.5rem;
}

.addCard-con text {
  color: #bebebe;
  line-height: 5rem;
  font-size: 20px;
}

van-tabbar {
  /* position: relative; *//* border-color: #000; */
}

/* #add-btn{
  position: relative;
} */

#add-img {
  margin-top: 5px;
}

#add-img-a {
  margin-top: 5px;
  transform: rotate(45deg);
}

.other-con {
  /* position: absolute; *//* top: -10px;
  right: 2.28rem; */
  width: 60px;
  height: 60px;
  text-align: center;
  border-radius: 100%;
  background-color: #fff;
  z-index: 101;
}

.dreamCard-con {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  padding-top: 0.5rem;
}

.newDream-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 9rem;
  height: 11rem;
  border: 2px solid #2c2c2c;
  border-radius: 1.5rem;
  margin: 1rem auto;
}

.female-con {
  background-color: #fbdbc9;
}

.male-con {
  background-color: #d3f5f2;
}

.noDream-con {
  border: 2px dashed #bebebe;
}

.sex-con {
  width: 3.5rem;
  height: 3.5rem;
}

.male-icon {
  margin-top: 0.25rem;
}

